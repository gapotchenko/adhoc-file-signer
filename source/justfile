set windows-shell := ["gnu-tk", "-i", "-c"]
set script-interpreter := ["gnu-tk", "-i", "-l", "sh", "-eu"]
set unstable := true

@help:
    just --list

# Format source code
[group("development")]
format:
    cd client; just format
    cd server; just format
    cd packaging; just format

# Check source code
[group("development")]
check:
    cd client; just check
    cd server; just check
    cd packaging; just check

# Lint source code
[group("development")]
lint:
    cd server; just lint

[group("build")]
pack:
    cd packaging; just pack

[group("build")]
clean:
    cd packaging; just clean
